# ============================================
# Garden App Server Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to GitHub!

# Server Configuration
SERVER_BASE_URL=http://localhost:5000
# For production, use your actual domain:
# SERVER_BASE_URL=https://your-domain.com

# Flask Configuration
FLASK_ENV=development
# For production, use:
# FLASK_ENV=production
FLASK_DEBUG=False

# Firebase Configuration
# Path to your Firebase service account key JSON file
FIREBASE_SERVICE_ACCOUNT_KEY=serviceAccountKey.json
# Or use the full path:
# FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/serviceAccountKey.json

# Firebase Project Details (from your Firebase Console)
FIREBASE_PROJECT_ID=garden-main
FIREBASE_STORAGE_BUCKET=garden-main.firebasestorage.app

# Server Port
PORT=5000

# AI Model Configuration
AI_MODEL_PATH=fine_tuned_blip_garden_monitor
AI_DEVICE=cpu
# For GPU, use:
# AI_DEVICE=cuda

# Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=png,jpg,jpeg,mp4,mov,avi,mkv

# Notification Configuration
FCM_ENABLED=true

# Admin Panel Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_in_production

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS Configuration (for admin panel)
CORS_ORIGINS=*
# For production, specify allowed origins:
# CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# ============================================
# IMPORTANT SECURITY NOTES
# ============================================
# 1. Never commit the actual .env file to GitHub
# 2. Change all default passwords before deployment
# 3. Use strong passwords in production
# 4. Keep your serviceAccountKey.json secure
# 5. Use HTTPS in production (not HTTP)
# 6. Restrict CORS_ORIGINS in production
